<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('ga') -%> <%- include('links') -%> <%- include('meta') -%>
		<%- include ('css') -%> <%- include('scripts') -%> <%-
		include('trackers') -%>
	</head>
	<body>
		<div hidden id="internalIP"></div>
		<%- include('internalIP') -%>
		<div hidden id="torBrowser"></div>
		<div hidden id="updateChargeInfo"></div>
		<div hidden id="updateLevelInfo"></div>
		<div hidden id="updateChargingInfo"></div>
		<div hidden id="updateDischargingInfo"></div>
		<%- include('batteryAPI') -%> <%- include('torBrowser') -%>
		<div class="container" id="LoginContainer">
			<div class="row"></div>
			<div id="login-page" class="row">
				<div class="col s12 m2 l4"></div>
				<div class="col s12 m8 l4 z-depth-4 card-panel">
					<form class="login-form">
						<div class="row">
							<h4 class="center-align">Login with Proton</h4>
						</div>
						<div class="row margin">
							<div class="input-field col s12">
								<i class="material-icons prefix"
									>account_circle</i
								>
								<input
									id="username"
									type="text"
									autocomplete="email"
								/>
								<label for="username" class="center-align"
									>Username</label
								>
							</div>
						</div>
						<div class="row margin center-align">
							<div class="input-field col s12">
								<i class="material-icons prefix">lock</i>
								<input
									id="password"
									type="password"
									autocomplete="current-password"
								/>
								<label for="password">Password</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<a
									onclick="toggleSignIn()"
									class="btn waves-effect waves-light col s12"
									>Login</a
								>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<img
									width="100%"
									height="auto"
									src="/images/proton.png"
									class="center-align"
								/>
							</div>
						</div>
					</form>
				</div>
				<div class="col s12 m2 l4">
					<!-- Note that "m4 l3" was added -->
				</div>
			</div>
		</div>
		<script type="text/javascript" src="js/materialize.min.js"></script>
		<%- include('pwa') -%>
		<script>
			$(".button-collapse").sideNav({
				menuWidth: 300, // Default is 300
				edge: "left", // Choose the horizontal origin
				closeOnClick: true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
				draggable: true, // Choose whether you can drag to open on touch screens,
				onOpen: function (el) {
					/* Do Stuff* / }, // A function to be called when sideNav is opened
          onClose: function(el) { /* Do Stuff */
				}, // A function to be called when sideNav is closed
			});
			$(".collapsible").collapsible();
			$(".button-collapse").sideNav("hide");
			$(document).ready(function () {
				$("select").material_select();
			});
		</script>
	</body>
</html>
